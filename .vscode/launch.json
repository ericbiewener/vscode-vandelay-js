// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
    "configurations": [
        {
            "name": "Single Root",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/../test-workspaces/js",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "Multi Root",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/../test-workspaces/js-multi-root.code-workspace",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "Gatsby",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/../test-workspaces/js-gatsby",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "Single Root ES5",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/../test-workspaces/js-require",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "Tests - Single Root",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "TEST_PROJECT": "single-root"
            },
            "args": [
                "${workspaceFolder}/test/single-root",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test"
            ]
        },
        {
            "name": "Tests - UPDATE SNAPSHOTS - Single Root",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "TEST_PROJECT": "single-root",
                "UPDATE_SNAPSHOT": "true"
            },
            "args": [
                "${workspaceFolder}/test/single-root",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test"
            ]
        },
        {
            "name": "Tests - Single Root ES5",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "TEST_PROJECT": "es5"
            },
            "args": [
                "${workspaceFolder}/test/es5",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test"
            ]
        },
        {
            "name": "Tests - UPDATE SNAPSHOTS - Single Root ES5",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "TEST_PROJECT": "es5",
                "UPDATE_SNAPSHOT": "true"
            },
            "args": [
                "${workspaceFolder}/test/es5",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test"
            ]
        }
    ]
}
