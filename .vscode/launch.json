// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
    "configurations": [
        {
            "name": "Single Root Workspace Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/../test-workspaces/js",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "Multi Root Workspace Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/../test-workspaces/js-multi-root.code-workspace",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "Gatsby",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/../test-workspaces/js-gatsby",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "Require",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/../test-workspaces/js-require",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "Tests - Single Root Workspace",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/test/single-root-workspace/project",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test/single-root-workspace"
            ]
        },
        {
            "name": "Tests - UPDATE SNAPSHOTS - Single Root Workspace",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "SNAPSHOT_UPDATE": "true"
            },
            "args": [
                "${workspaceFolder}/test/single-root-workspace/project",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test/single-root-workspace"
            ]
        }
    ]
}
